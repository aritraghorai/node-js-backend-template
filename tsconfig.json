{
  "compilerOptions": {
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    // Node 18
    "module": "CommonJS",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    // "swc": true,
    "require": [
      "tsconfig-paths/register"
    ],
    "experimentalSpecifierResolution": "node",
  }
}
